    <ContentPage.Content>

        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Password">

                    <!--<SwitchCell x:Name="showPasswordCell"
                                Text="Enable Passcode"
                                On="False"
                                OnColor="Teal"
                                OnChanged="ShowPasswordCell_OnChanged"/>-->

                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Enable Passcode"/>
                            <Switch x:Name="showPasswordCell" IsToggled="{Binding showCurrentPasswordValue}"
                                    HorizontalOptions="End">
                                <Switch.Behaviors>
                                    <local1:EventToCommandBehavior EventName="PasswordToggled" 
                                                                   Command="{Binding ShowPasswordCommand}"/>
=                               </Switch.Behaviors>
                                
                            </Switch>
                        </StackLayout>
                        
                    </ViewCell>

                        <!--<EntryCell x:Name="setPasswordCell"
                               Label="The passcode can be a maximum of 4 digits."
                               Keyboard="Numeric"
                               IsEnabled="{Binding showPasswordValue}"
                               Text="{Binding currentPassword}"
                               Completed="EntryCell_Completed"/>-->
                    
                    

                </TableSection>

                <TableSection Title="Reminders/Notifications">
                    <SwitchCell x:Name="enableReminderCell"
                                Text="Enable Reminder"
                                On="False"
                                OnColor="Teal"
                                OnChanged="EnableReminderCell_OnChanged"/>

                </TableSection>
            </TableRoot>
        </TableView>


    </ContentPage.Content>
</ContentPage>