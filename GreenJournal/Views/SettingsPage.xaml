<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GreenJournal.ViewModels"
             x:Class="GreenJournal.Views.SettingsPage"
             Title="Settings"
             x:DataType="viewmodels:NewJournalPageVM">
    <ContentPage.BindingContext>
        <viewmodels:NewJournalPageVM/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>

        <TableView Intent="Settings">
            <TableRoot>
                <TableSection >

                    <SwitchCell Text="Enable Passcode"
                                On="False"
                                OnColor="Teal"/>
                    <!--OnChanged="{Binding showPassword}"-->
                    <EntryCell Label="The passcode can be a maximum of 4 digits."
                               Keyboard="Numeric"/>
                    <!--IsEnabled="{Binding showPassword}"-->
                 </TableSection>

                <TableSection>
                    <SwitchCell Text="Enable Reminder"
                                On="False"
                                OnColor="Teal"/>

                </TableSection>
            </TableRoot>
        </TableView>


    </ContentPage.Content>
</ContentPage>